        <div class="cart-section">
            <h2>Your Cart</h2>
            
            <ul id="cart-items">
                <p id="cart-empty-msg">Your cart is empty.</p>
            </ul>
            
            <div class="total-section">
                Total: <span id="total-price">$0.00</span>
            </div>

            <button id="checkout-btn" class="btn">Checkout</button>
        </div>

    </div>

    <script>
        // Wait for the DOM to be fully loaded before running the script
        document.addEventListener('DOMContentLoaded', () => {

            // --- 1. Select Elements ---
            const gameButtons = document.querySelectorAll('.add-to-cart');
            const cartItemsList = document.getElementById('cart-items');
            const totalPriceEl = document.getElementById('total-price');
            const checkoutBtn = document.getElementById('checkout-btn');
            const cartEmptyMsg = document.getElementById('cart-empty-msg');

            // --- 2. Initialize Cart State ---
            let cart = []; // This will store our game objects
            let total = 0;

            // --- 3. Add Event Listeners ---

            // Listen for clicks on all "Add to Cart" buttons
            gameButtons.forEach(button => {
                button.addEventListener('click', (event) => {
                    // Get the game data from the parent's data- attributes
                    const gameItem = event.target.closest('.game-item');
                    const game = {
                        id: gameItem.dataset.id,
                        name: gameItem.dataset.name,
                        price: parseFloat(gameItem.dataset.price) // Convert string price to a number
                    };
                    
                    // Add to cart and update UI
                    addToCart(game);
                });
            });

            // Listen for clicks on the "Checkout" button
            checkoutBtn.addEventListener('click', () => {
                if (cart.length === 0) {
                    alert("Your cart is empty!");
                    return;
                }
                
                alert(`Thank you for your purchase! Your total is $${total.toFixed(2)}.`);
                
                // Reset the cart after checkout
                cart = [];
                updateCartUI();
            });

            // --- 4. Core Functions ---

            /**
             * Adds a game to the cart array and updates the UI.
             */
            function addToCart(game) {
                cart.push(game);
                console.log(cart); // For debugging
                updateCartUI();
            }

            /**
             * Removes an item from the cart based on its index.
             */
            function removeFromCart(index) {
                // Remove the item at the specified index from the cart array
                cart.splice(index, 1);
                updateCartUI();
            }

            /**
             * Updates the cart list in the HTML and recalculates the total.
             */
            function updateCartUI() {
                // Clear the current cart list
                cartItemsList.innerHTML = '';
                
                // Reset total
                total = 0;

                if (cart.length === 0) {
                    // Show the "empty" message if cart is empty
                    cartItemsList.appendChild(cartEmptyMsg);
                } else {
                    // Hide the "empty" message by not adding it
                    // Loop through the cart and create an <li> for each item
                    cart.forEach((item, index) => {
                        total += item.price; // Add item price to total

                        const li = document.createElement('li');
                        li.classList.add('cart-item');
                        
                        // Set the content of the list item
                        li.innerHTML = `
                            <span class="item-name">${item.name}</span>
                            <span class="item-price">$${item.price.toFixed(2)}</span>
                            <button class="btn-remove" data-index="${index}">&times;</button>
                        `;

                        // Add an event listener for the new remove button
                        li.querySelector('.btn-remove').addEventListener('click', () => {
                            removeFromCart(index);
                        });

                        cartItemsList.appendChild(li);
                    });
                }
                
                // Update the total price display, formatted to 2 decimal places
                totalPriceEl.textContent = `$${total.toFixed(2)}`;
            }

            // Initial UI update on page load (to show the empty message)
            updateCartUI();

        });
    </script>

